@model KursViewModel
<h1>Kurs Düzenle</h1>
<hr>
<div class="row">
    <div class="col-8">

        <form asp-controller="Kurs" asp-action="Edit" method="post">
            <div asp-validation="all"></div>
            <input type="hidden" asp-for="KursId">
            <label asp-for="KursBaslik" class="form-label">Kurs Başlığı</label>
            <input asp-for="KursBaslik" class="form-control mb-3">
            <div class="mb-3">
                <label asp-for="OgretmenId" class="form-label">Öğretmen</label>
                <select asp-for="OgretmenId" asp-items="ViewBag.Ogretmenler" class="form-select">
                    <option>Seçiniz</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>
    </div>
    <div class="col-4">
        <h4>Öğrenciler</h4>
        <hr>
        <ul>
            @foreach( var item in @Model.KursKayitlari)
            {
            <li>@item.Ogrenci.AdSoyad</li>
            }
        </ul>
    </div>
</div>