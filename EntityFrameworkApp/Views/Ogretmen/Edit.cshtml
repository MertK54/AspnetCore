@model Ogretmen
<h1>Öğretmen Düzenle</h1>
<hr>
<div class="row">
    <div class="col-8">
        <form asp-controller="Ogretmen" asp-action="Edit" method="post">
            <input type="hidden" asp-for="OgretmenId">
            <div class="mb-3">
                <label asp-for="Ad" class="form-label">Öğretmen Adı</label>
                <input asp-for="Ad" class="form-control mb-3">
            </div>
            <div class="mb-3">
                <label asp-for="Soyad" class="form-label">Öğretmen Soyadı</label>
                <input asp-for="Soyad" class="form-control mb-3">
            </div>
            <div class="mb-3">
                <label asp-for="Eposta" class="form-label">Öğretmenin Eposta</label>
                <input asp-for="Eposta" class="form-control mb-3">
            </div>
            <div class="mb-3">
                <label asp-for="Telefon" class="form-label">Öğretmenin Telefon</label>
                <input asp-for="Telefon" class="form-control mb-3">
            </div>
            <div class="mb-3">
                <label asp-for="BaslamaTarihi" class="form-label">Öğretmenin Başlama Tarihi</label>
                <input asp-for="BaslamaTarihi" class="form-control mb-3">
            </div>

            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>
    </div>
    <div class="col-4">
        <h4>Kurs</h4>
        <hr>
        <ul>
            @foreach( var item in @Model.Kurslar)
            {
            <li>@item.KursBaslik</li>
            }
        </ul>
    </div>
</div>