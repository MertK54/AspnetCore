@model List<Tag>
<link rel="stylesheet" href="/css/HomeIndex.css">
<div class="container-fluid">
    <h1 class="text-center my-4 display-3 fw-bold" style="letter-spacing: .5rem;">
        Hayata Dair Herşey!
    </h1>
    <h4 class="text-center my-4" style="color:rgb(85, 85, 85);font-weight:100;">Düşüncelerini, ilhamını ve hikayelerini bizimle paylaş. Burada senin sesin duyulacak.</h4>
    <hr>
    <ul class="list-inline d-flex flex-wrap gap-2 justify-content-center">
        @foreach (var tag in Model)
        {
            <li class="list-inline-item">
                <a href="/posts/tag/@tag.Url" class="btn btn-sm p-2">@tag.Text</a>
            </li>
        }
    </ul>
    <hr>
    <div class="container-fluid mt-5">
        <div class="d-flex gap-3">
            <div class="banner" style="background-image: url('/img/banner1.png');">
                <a style="font-size: 1.4rem;" href="/posts/tag/web-programlama" class="banner-text">Web Programlama</a>
            </div>
            <div class="banner" style="background-image: url('/img/banner2.png');">
                <a href="/posts/tag/dizi-film" class="banner-text">Dizi/Film</a>
            </div>
            <div class="banner" style="background-image: url('/img/banner3.png');">
                <a href="/posts/tag/kitap" class="banner-text">Kitap</a>
            </div>
            <div class="banner" style="background-image: url('/img/banner4.png');">
                <a href="/posts/tag/gündem" class="banner-text">Gündem</a>
            </div>
            <div class="banner" style="background-image: url('/img/banner5.png');">
                <a href="/posts/tag/oyun" class="banner-text">Oyun</a>
            </div>
        </div>
    </div>
    <div class="container-fluid"style="margin-top: 5rem;">
        <hr>
        <div class="container">
            <div class="row align-items-start pt-5">
                <div class="col-md-7">
                    <h1 class="mb-4 mt-4" style="font-size: 4.5rem; font-weight: 800;letter-spacing: -.2rem;text-transform: uppercase;">"Üye ol ve topluluğa katıl."</h1>
                    <h4 class="description pt-4">Görüşlerini paylaşmak, firkilere yorum yapmak için platform mu arıyorsun? O zaman doğru yerdesin! Blogumuzdaki tavsiyelerle keyifle vakit geçirecek yeni keşifler yap. Şimdi kaydolarak bu zengin içeriğe ücretsiz ulaş!</h4> 
                </div>
                <div class="col-md-1 d-flex align-items-center">
                    <div class="vertical-line"></div>
                </div>
                <div class="col-md-4">
                    <div class="banner-wrapper banner">
                        <img src="/img/banner4.png" alt="Banner Image">
                    </div>
            </div>
            </div>
        </div>
</div>