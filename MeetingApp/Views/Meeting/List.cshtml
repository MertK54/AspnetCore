@model List<UserInfo>
    @{
    ViewBag.Title = "Toplantı Katılım Listesi";
    }
    <main class="text-center">
        <h1 class="h4">Toplantı Katılım Listesi</h1>
        <table class="table table-border">
            <thead>
                <tr>
                    <td>Ad</td>
                    <td>Email</td>
                    <td>Katılım Durumu</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @{ int i = 0;}
                @foreach(var user in Model)
                {
                var durum = user.WillAttend == true ? "Yes" : "No";
                var className = user.WillAttend == true ? "table-success" : "table-danger";
                if(user.WillAttend == true){
                i++;
                }
                <tr class="@className">
                    <td>@user.Name</td>
                    <td>@durum</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-controller="Meeting" asp-action="Details"
                            asp-route-id="@user.Id">Detail</a>
                    </td>
                </tr>
                }

            </tbody>
        </table>
        <div class="card">
            <div class="card-body">
                <p>Participant: @i</p>
            </div>
        </div>
    </main>